<Page x:Class="Airport.View.Pages.Flights.MoreInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airport.View.Pages.Flights"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="940" d:DesignWidth="1615"
      Title="MoreInformationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="64"
                   HorizontalAlignment="Center"
                   x:Name="InformationFlight_TextBlock"
                   />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Date" FontSize="40" HorizontalAlignment="Center"/>
                <Grid Grid.Row="0" Margin="0 50 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"
                               Text="DepartureDate:"
                               FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="1"
                               Text="ArrivalDate:"
                               FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="0" Grid.Row="2"
                               Text="DepartureTime:"
                               FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="0" Grid.Row="3"
                               Text="ArrivalTime:"
                               FontSize="30" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" Grid.Row="0"
                               x:Name="DepartureDate_TextBlock"
                               FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="1"
                                x:Name="ArrivalDate_TextBlock"
                                FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Grid.Row="2"
                                x:Name="DepartureTime_TextBlock"
                                FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Grid.Row="3"
                                x:Name="ArrivalTime_TextBlock"
                                FontSize="30" VerticalAlignment="Center"/>
                </Grid>
                <TextBlock Grid.Row="1" Text="Airport" FontSize="40" HorizontalAlignment="Center"/>
                <Grid Grid.Row="1" Margin="0 50 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"
                                Text="DepartureAirport:"
                                FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="1"
                                Text="ArrivalAirport:"
                                FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="0" Grid.Row="2"
                                Text="DepartureAirportCode:"
                                FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="0" Grid.Row="3"
                                Text="ArrivalAirportCode:"
                                FontSize="30" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" Grid.Row="0"
                                x:Name="DepartureAirport_TextBlock"
                                FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="1"
                                x:Name="ArrivalAirport_TextBlock"
                                FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Grid.Row="2"
                                x:Name="DepartureAirportCode_TextBlock"
                                FontSize="30" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Grid.Row="3"
                                x:Name="ArrivalAirportCode_TextBlock"
                                FontSize="30" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="510"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Airline/Airplane" FontSize="40" HorizontalAlignment="Center"/>
                <Grid Grid.Row="0" Margin="0 50 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0"
                                Text="AirLines:"
                                FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="1"
            Text="Airplane:"
            FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="2"
            Text="TotalSeats:"
            FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="3"
            Text="TotalSeatsFree:"
            FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="4"
            Text="Status:"
            FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="0" Grid.Row="5"
            Text="GateNumber:"
            FontSize="30" VerticalAlignment="Center" />


                    <TextBlock Grid.Column="1" Grid.Row="0"
                    x:Name="AirLines_TextBlock"
                    FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="1"
x:Name="Airplane_TextBlock"
FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="2"
x:Name="TotalSeats_TextBlock"
FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="3"
x:Name="TotalSeatsFree_TextBlock"
FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="4"
x:Name="Status_TextBlock"
FontSize="30" VerticalAlignment="Center" />
                    <TextBlock Grid.Column="1" Grid.Row="5"
x:Name="GateNumber_TextBlock"
FontSize="30" VerticalAlignment="Center" />
                </Grid>
                <Button Grid.Row="2" x:Name="TicketSell_Button" Width="400" Height="100" Content="TicketMenu" Click="TicketSell_Button_Click"/>
                <Button Grid.Row="3" x:Name="Registration_Button" Width="400" Height="100" Content="RegistrationMenu" Click="Registration_Button_Click"/>
            </Grid>
            
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="400" Height="100" Content="UpdateFlight" x:Name="UpdateFlight_Button" Click="UpdateFlight_Button_Click" HorizontalAlignment="Right"/>
            <Button Grid.Column="1" Width="400" Height="100" Content="DeleteFlight" x:Name="DeleteFlight_Button" Click="DeleteFlight_Button_Click"/>
        </Grid>
    </Grid>
</Page>
