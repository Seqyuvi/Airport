<Window x:Class="Airport.View.Windows.UpdateFlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Airport.View.Windows"
        mc:Ignorable="d"
        Title="UpdateFlightWindow" Height="800" Width="860">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="../../Assets/Images/Logo.png" Width="230" Height="80" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="0"  Text="Changing Data" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 27 0 0"/>
        <Frame Grid.Row="1" x:Name="MainFrame"  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
