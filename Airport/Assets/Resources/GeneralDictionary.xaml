<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <!-- Стили для элементов из Extended WPF Toolkit -->
    <Style TargetType="xctk:WatermarkTextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Background" Value="#F9F9F9"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>

    <Style TargetType="xctk:WatermarkComboBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Background" Value="#F9F9F9"/>
    </Style>

    <Style TargetType="xctk:DateTimePicker">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Background" Value="#F9F9F9"/>
        <Setter Property="Format" Value="FullDateTime"/>
        <!-- Для выбора даты и времени -->
        <Setter Property="Watermark" Value="{Binding RelativeSource={RelativeSource Self}, Path=Watermark}"/>
    </Style>

    
</ResourceDictionary>